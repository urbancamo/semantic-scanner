<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

	<bean id="envProps" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
	  <property name="locations">
	    <list>
			<value>classpath:environment.properties</value>
	    </list>
	  </property>
	</bean>
	
	<bean id="archiveScanExecutor" class="eu.hecnet.apps.scanner.ArchiveScanExecutor"/>
	
	<bean id="archiveScanner" class="eu.hecnet.apps.scanner.ArchiveScanner"/>  
	
	<bean id="lexicalRdf" class="eu.hecnet.jena.vms.LexicalRdf"/>  
	
	<bean id="queryExecutor" class="eu.hecnet.apps.query.QueryExecutor"/>
	
	<bean id="defaultScanCommand" class="eu.hecnet.apps.scanner.ScanCommand">
		<property name="archiveName" value="#{envProps['archive.name']}"/>  
		<property name="archiveBase" value="#{envProps['archive.base']}"/>  
	</bean>
</beans>  